# Environment Configuration for Family Tree Docker Setup
# Copy this file to .env and customize the values

# Application Settings
COMPOSE_PROJECT_NAME=family-tree

# Web Server
NGINX_PORT=8080
ADMINER_PORT=8081

# Database Configuration
MYSQL_ROOT_PASSWORD=secure_root_password_123
DB_NAME=familytree
DB_USER=familytree_user
DB_PASSWORD=secure_db_password_456

# WordPress Configuration
WP_TABLE_PREFIX=wp_
WP_DEBUG=false
WP_SITE_URL=http://localhost:8080
WP_HOME=http://localhost:8080

# Redis Configuration (Optional)
REDIS_MAX_MEMORY=128mb

# Security Settings
# Generate strong passwords for production
# Use docker secrets in production instead of env vars

# Performance Settings
MYSQL_MAX_CONNECTIONS=200
MYSQL_INNODB_BUFFER_POOL_SIZE=256M
PHP_MEMORY_LIMIT=256M
PHP_MAX_MEMORY_LIMIT=512M

# Development Settings
NODE_ENV=development</content>
